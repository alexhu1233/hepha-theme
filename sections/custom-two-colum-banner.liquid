<slideshow-component data-pf-type="Section" id="{{ section.settings.section_id }}" class="slideshow-component"
  role="region" aria-roledescription="{{ 'sections.slideshow.carousel' | t }}">
  <div class="two-column-slides">
    {%- assign max_blocks = 2 -%}
    {%- for block in section.blocks limit: max_blocks -%}
    <div class="two-column-slide" id="Slide-{{ section.id }}-{{ forloop.index }}" style="display: flex; justify-content: center;
