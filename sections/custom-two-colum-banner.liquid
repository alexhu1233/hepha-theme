    {%- endfor -%}



  </div>
</slideshow-component>


<style>
  .two-column-slider {
    display: flex;
    flex-direction: row;
  }

  .two-column-slides {
    display: flex;
    width: 100%;
    background-position: center;
    background-repeat: no-repeat;
    height: 700px;
  }

  .two-column-slide {
    flex: 1;
    position: relative;
    padding: 40px !important;
  }

  .two-column-slide__media {
    height: 700px;
    background-size: cover;
    background-position: center;
  }

  .two-column-slide__content {
    width: 100%;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
  }

  .two-column-slide__heading,
  .two-column-slide__text {
    margin: 0 0 30px 0;
    text-align: left;
  }

  .two-column-slide__heading p,
  .two-column-slide__text p {
    margin: 0;
    text-align: left;
  }

  .custom-button {
    padding: 10px 15px;
    text-decoration: none;
    border-radius: 25px;
    transition: background-color 0.3s;
    display: inline-block;
  }

  .custom-button:hover {
    opacity: 0.8;
  }

  .columns-container,
  .banner-right-column:hover .columns-container {
    flex-wrap: wrap !important;
    display: grid !important;
    grid-template-columns: repeat(4, 1fr);
    gap: 0 !important;
  }

  .column-item {
    padding: 10px;
    box-sizing: border-box;
  }

  @media (max-width: 768px) {
    .two-column-slides {
      flex-direction: column !important;
      height: 100% !important;
    }

    .two-column-slide {
      padding-top: 0 !important;
      min-height: 500px;
    }

    .two-column-slide__text {
      font-size: 16px !important;
      line-height: 1.5 !important;
      max-width: 300px !important;
    }

    .two-column-slide__heading {
      font-size: 16px !important;
      line-height: 1.5 !important;
      margin: 0 0 20px 0 !important;
    }

    .two-column-slide__content {
      max-width: 300px;
    }

    

    .columns-container,
        .banner-right-column:hover .columns-container {
            flex-wrap: wrap !important;
            display: grid !important;
            grid-template-columns: repeat(2, 1fr);
            gap: 0 !important;
        }

        .column-item {
            padding: 10px;
            box-sizing: border-box;
        }
  }
</style>